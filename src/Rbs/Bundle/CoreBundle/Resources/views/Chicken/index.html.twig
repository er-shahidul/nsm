{% extends '::base.html.twig' %}

{% block title %}{{ parent() }} : Chicken Set List {% endblock %}

{% block body %}

    <div class="modal fade" id="ajax" role="basic" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <img src="{{ asset('assets/global/img/loading-spinner-grey.gif') }}" alt="" class="loading">
                    <span> &nbsp;&nbsp;Loading... </span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="ajaxAdd" role="basic" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <img src="{{ asset('assets/global/img/loading-spinner-grey.gif') }}" alt="" class="loading">
                    <span> &nbsp;&nbsp;Loading... </span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Chicken Set List
                </div>
                <a style="float: right; margin-top: 3px;" href="{{ path('chicken_set_in_location_create') }}" class="btn green" data-target="#ajaxAdd" data-toggle="modal">New Chicken Set</a>
            </div>
            <div class="portlet-body">
                <div class="dataTables_wrapper no-footer">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Sl</th>
                                <th>District</th>
                                <th>Item Name</th>
                                <th>Quantity</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for index, chickenTypeSet in chickenTypeSetArr %}
                                <tr>
                                    <td>{{ index + 1 }}.</td>
                                    <td>{{ chickenTypeSet.location.name }}</td>
                                    <td>{{ chickenTypeSet.item.name }}</td>
                                    <td>{{ chickenTypeSet.quantity | default('0') }}</td>
                                    <td><a href="{{ path('chicken_set_in_location_add', {'id' : chickenTypeSet.id}) }}" data-target="#ajax" data-toggle="modal">add</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div style="clear: both"></div>
                </div>
            </div>
        </div>
    </div>
    <div style="clear: both"></div>
{% endblock %}