{% extends '::base.html.twig' %}

{% block body -%}
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Add Transport Incentive
                </div>
            </div>
            <div class="portlet-body">
                {{ include('_elements/_back_to_list_button.html.twig', {url: path('transport_incentive_list'), label: 'Back to List', 'icon': 'chevron-left'}) }}
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'bundles/rbscore/js/transport-incentive.js' %}
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock javascripts %}

{% block documentReady %}
    {{ parent() }}
    FormValidation.init();
    $("select[multiple=multiple]").multiSelect({selectableOptgroup: true});
    $('select.union-selector, select.thana-selector').html('')
    $('select.zilla-selector').trigger('change');
{% endblock documentReady %}