{% extends '::base.html.twig' %}

{% block title %}{{ parent() }} : SR {% endblock %}

{% block body %}

    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>SR
                </div>
            </div>
            <div class="portlet-body">

                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Sl</th>
                        <th>SR Name</th>
                        <th>District</th>
                        <th>Edit</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for sr in srList %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ sr.profile.fullname }}</td>
                            <td>{{ sr.zilla.name | default('') }}</td>
                            <td><a href="{{ path('swapping_sr_create', {'id': sr.id }) }}"> Swap </a></td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <div style="clear: both"></div>
{% endblock %}
