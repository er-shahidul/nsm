{% extends '::base.html.twig' %}

{% block title %}{{ parent() }} : RSM {% endblock %}

{% block body %}

    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>RSM
                </div>
            </div>
            <div class="portlet-body">

                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Sl</th>
                        <th>RSM Name</th>
                        <th>Location</th>
                        <th>Edit</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for rsm in rsmList %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ rsm.profile.fullname }}</td>
                            <td>{{ rsm.zilla.name }}</td>
                            <td><a href="{{ path('swapping_rsm_create', {'id': rsm.id }) }}"> Swap </a></td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <div style="clear: both"></div>
{% endblock %}
