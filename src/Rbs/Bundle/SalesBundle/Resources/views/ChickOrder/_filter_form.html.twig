<form class="chick-order-filter form-inline margin-bottom-20 pull-left" action="{{ path('order_manage_chick') }}">
    <div class="form-group">
        <label class="control-label">Date: <input name="date" type="text"
                                                  class="date-picker form-control hidden-print"
                                                  value="{{ date }}">
            <span class="visible-print-inline" style="margin-right: 50px">{{ date }}</span>
        </label>
        <label class="control-label">
            Item: <select class="form-control hidden-print" name="item">
                {% for item in chickItems %}
                    <option value="{{ item.id }}" {% if selectedItem == item.id %}{{ ' selected="selected"' }}{% endif %}>{{ item.name }}</option>
                {% endfor %}
            </select>
            <span class="visible-print-inline">
                {% for item in chickItems %}
                    {% if selectedItem == item.id %}{{ item.name }}{% endif %}
                {% endfor %}
            </span>
        </label>
        <input type="submit" class="btn btn-default hidden-print" value="Edit">
        <button type="button" class="btn btn-default go-to-view-page hidden-print" value="Go">View</button>
    </div>
</form>
