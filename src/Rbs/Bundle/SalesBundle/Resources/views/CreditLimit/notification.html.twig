{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} : Credit Limit Notification List {% endblock %}

{% block body %}

    <div class="modal fade" id="ajax" role="basic" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="ajaxHistory" role="basic" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Credit Limit Notification List
                </div>
            </div>
            <div class="portlet-body">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Sl</th>
                            <th>Agent Name</th>
                            <th>End Date</th>
                            <th>Category Name</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for index, creditLimitNotification in creditLimitNotifications %}
                            <tr>
                                <td>{{ index + 1 }}.</td>
                                <td>{{ creditLimitNotification['agentName'] }}</td>
                                <td>{{ creditLimitNotification['endDate'] | date('F Y') }}</td>
                                <td>{{ creditLimitNotification['categoryName'] }}</td>
                                <td><a href="{{ path('credit_limit_add', {'agentId' : creditLimitNotification['agentId'], 'categoryId' : creditLimitNotification['categoryId'], 'creditLimitId' : creditLimitNotification['creditLimitId']}) }}">add</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
    <div style="clear: both"></div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
