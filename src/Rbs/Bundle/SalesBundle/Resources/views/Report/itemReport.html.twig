{% extends '::base.html.twig' %}

{% block title %}{{ parent() }} : Report {% endblock %}

{% block body %}

    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-th-list"></i>Order Item Report
                </div>
            </div>
            <div class="portlet-body">

                <div class="row">
                        <form action="#" method="post">
                            <div class="form-body">

                                <div class="col-md-5">
                                    <div class="input-group input-daterange">
                                        <input type="text" name="start_date" class="form-control input-small" value="{{ app.request.request.get('start_date') }}">
                                        <span class="input-group-addon">to</span>
                                        <input type="text" name="end_date" class="form-control input-small" value="{{ app.request.request.get('end_date') }}" style="margin-left: 0">
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="input-icon">
                                            {{ form_widget(form.item, { 'attr': {'class': 'form-control select2me', 'placeholder':'Select Item'} }) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="input-icon">
                                            <input type="submit" name="submit" value="Report Generate" class="btn blue" style="margin-left: 50px;">
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </form>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Sl</th>
                            <th>Item</th>
                            <th>Quantity</th>
                            <th>Total Amount</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for index, orderItem in orderItems %}
                            <tr>
                                <td>{{ index + 1 }}.</td>
                                <td>{{ orderItem['itemName'] | default('') }}</td>
                                <td>{{ orderItem['quantity'] | default('') }}</td>
                                <td>{{ orderItem['totalAmount'] | default('') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

{% endblock %}