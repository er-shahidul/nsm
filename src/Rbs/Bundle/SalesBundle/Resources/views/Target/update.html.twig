{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} : Target update {% endblock %}

{% block body %}
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    Target Update
                </div>
            </div>
            <div class="portlet-body">
                {{ include('_elements/_back_to_list_button.html.twig', {url: path('target_list'), label: 'Back to List', 'icon': 'chevron-left'}) }}

                {{ form_start(form) }}

                <div class="form-group"><label class="col-sm-2 control-label required" for="target_quantity">Zilla:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="{{ target.zilla.name }}" disabled="disabled">
                    </div>
                </div>

                <div class="form-group"><label class="col-sm-2 control-label required" for="target_quantity">Upozilla:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="{{ target.upozilla.name }}" disabled="disabled">
                    </div>
                </div>

                <div class="form-group"><label class="col-sm-2 control-label required" for="target_quantity">Category:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="{{ target.category.categoryName }}" disabled="disabled">
                    </div>
                </div>

                {{ form_end(form) }}

            </div>
        </div>
    </div>
    <div style="clear: both"></div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets  filter='cssrewrite'
    "assets/global/plugins/bootstrap-toastr/toastr.min.css"
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    "assets/global/plugins/bootstrap-toastr/toastr.min.js"
    "assets/global/plugins/jquery-validation/js/jquery.validate.min.js"
    "assets/admin/pages/scripts/form-validation.js"
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock javascripts %}

{% block documentReady %}
    {{ parent() }}

    $(".month-year-picker").datepicker( {
        format: "dd-mm-yyyy",
        viewMode: "months",
        minViewMode: "months",
        autoclose: true
    });

{% endblock %}